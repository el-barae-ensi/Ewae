{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information",
      "Microsoft.EntityFrameworkCore.Infrastructure": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "server=localhost;port=3306;database=ewae_dev_db;user=ewae_user;password=ewae_password;"
  },
  "Jwt": {
    "Secret": "EwaeDevSecretKeyForJWTTokenGeneration2024!@#$%^&*()",
    "Issuer": "EwaeDevAPI",
    "Audience": "EwaeDevClients",
    "ExpiryHours": 48,
    "RefreshTokenExpiryDays": 7
  },
  "CORS": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000",
      "http://localhost:8080",
      "https://localhost:8080",
      "http://127.0.0.1:3000",
      "https://127.0.0.1:3000"
    ]
  },
  "FileUpload": {
    "MaxFileSizeMB": 100,
    "AllowedExtensions": [
      ".jpg",
      ".jpeg",
      ".png",
      ".gif",
      ".bmp",
      ".webp",
      ".pdf",
      ".doc",
      ".docx",
      ".xls",
      ".xlsx",
      ".ppt",
      ".pptx",
      ".txt",
      ".csv",
      ".zip",
      ".rar"
    ],
    "UploadPath": "wwwroot/uploads",
    "DocumentsPath": "wwwroot/documents",
    "ImagesPath": "wwwroot/images"
  },
  "Email": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SenderEmail": "noreply-dev@ewae.ma",
    "SenderName": "Ewae Development Platform",
    "Username": "dev@ewae.ma",
    "Password": "dev-password",
    "EnableSsl": true
  },
  "Application": {
    "Name": "Ewae - Association Management Platform (Development)",
    "Version": "1.0.0-dev",
    "Environment": "Development",
    "BaseUrl": "https://localhost:7000",
    "FrontendUrl": "http://localhost:3000"
  },
  "Features": {
    "EnableSwagger": true,
    "EnableDetailedErrors": true,
    "EnableCaching": true,
    "EnableRateLimiting": false,
    "EnableFileUpload": true,
    "EnableEmailNotifications": false,
    "EnableSeeding": true,
    "EnableMockData": true
  },
  "Cache": {
    "DefaultExpirationMinutes": 5,
    "UserCacheExpirationMinutes": 10,
    "StatsCacheExpirationMinutes": 2
  },
  "RateLimiting": {
    "RequestsPerMinute": 1000,
    "BurstRequests": 2000
  },
  "Security": {
    "RequireHttps": false,
    "EnableApiKeyAuthentication": false,
    "ApiKeyHeader": "X-API-Key",
    "EnableRequestLogging": true,
    "MaxRequestBodySize": 104857600,
    "AllowCredentials": true
  },
  "Database": {
    "EnableSensitiveDataLogging": true,
    "EnableDetailedErrors": true,
    "CommandTimeout": 60,
    "MaxRetryCount": 3,
    "EnableAutoMigrations": true,
    "SeedTestData": true
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.File", "Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/ewae-dev-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}",
          "shared": true,
          "flushToDiskInterval": "00:00:01"
        }
      }
    ],
    "Enrich": ["FromLogContext"]
  },
  "TestData": {
    "CreateSampleAssociations": 10,
    "CreateSampleResidents": 50,
    "CreateSampleDonations": 30,
    "CreateSampleAlerts": 15,
    "CreateSampleDeclarations": 20
  }
}
