{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "server=localhost;database=ewae_dev_db;user=ewae_user;password=ewae_password;",
    "RedisConnection": "localhost:6379"
  },
  "Jwt": {
    "Secret": "EwaeSecretKeyForJWTTokenGeneration2024!@#$%^&*()",
    "Issuer": "EwaeAPI",
    "Audience": "EwaeClients",
    "ExpiryHours": 24,
    "RefreshTokenExpiryDays": 30
  },
  "CORS": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000",
      "http://localhost:8080",
      "https://localhost:8080"
    ]
  },
  "FileUpload": {
    "MaxFileSizeMB": 50,
    "AllowedExtensions": [
      ".jpg",
      ".jpeg",
      ".png",
      ".gif",
      ".pdf",
      ".doc",
      ".docx",
      ".xls",
      ".xlsx"
    ],
    "UploadPath": "uploads",
    "DocumentsPath": "documents",
    "ImagesPath": "images"
  },
  "Email": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SenderEmail": "noreply@ewae.ma",
    "SenderName": "Ewae Platform",
    "Username": "",
    "Password": "",
    "EnableSsl": true
  },
  "Application": {
    "Name": "Ewae - Association Management Platform",
    "Version": "1.0.0",
    "Environment": "Development",
    "BaseUrl": "https://localhost:7000",
    "FrontendUrl": "http://localhost:3000"
  },
  "Features": {
    "EnableSwagger": true,
    "EnableDetailedErrors": true,
    "EnableCaching": true,
    "EnableRateLimiting": true,
    "EnableFileUpload": true,
    "EnableEmailNotifications": false
  },
  "Cache": {
    "DefaultExpirationMinutes": 30,
    "UserCacheExpirationMinutes": 60,
    "StatsCacheExpirationMinutes": 15
  },
  "RateLimiting": {
    "RequestsPerMinute": 100,
    "BurstRequests": 200
  },
  "Security": {
    "RequireHttps": false,
    "EnableApiKeyAuthentication": false,
    "ApiKeyHeader": "X-API-Key",
    "EnableRequestLogging": true,
    "MaxRequestBodySize": 52428800
  },
  "Database": {
    "EnableSensitiveDataLogging": true,
    "EnableDetailedErrors": true,
    "CommandTimeout": 30,
    "MaxRetryCount": 3,
    "EnableAutoMigrations": true
  }
}
